.clip-wrap
  position: relative
  user-select: none

.clip-main
  position: relative
  overflow: hidden
  width: 552px
  height: 552px
  &>div
    position: absolute
    width: 100%
    height: 100%
    left: 50%
    top: 50%
    transform: translate(-50%, -50%)
    &>img
      position: absolute
      width: 100%
      left: 50%
      top: 50%
      transform: translate(-50%, -50%)

.clip-preview-wrap
  width: 10%
  border: 1px solid transparent

.clip-preview-wrap-content
  background: #f5f5f5
  cursor: pointer

.clip-preview-wrap-active
  border-color: red

.clip-preview-img-wrap 
  width: 100%
  height 0
  position: relative
  padding-bottom: 100%
  overflow: hidden

.clip-preview-img
  width: 100%
  position: absolute
  top: 50%
  left: 50%
  transform: translate(-50%, -50%)

.clip-preview-error
  position: absolute
  width: 100%
  height: 100%
  font-size: 12px
  color: red
  background: rgba(0, 0, 0, .25)

.clip-preview-error-inner
  position: absolute
  top: 50%
  left: 50%
  transform: translate(-50%, -50%)
  text-align: center
  color: #ffee00
  white-space: nowrap

.clip-preview-text
  text-align: center
  line-height: 1.5
  font-size: 12px
  text-decoration: underline
  color: #666

.clip-preview-reset
  position: absolute
  z-index: 1
  bottom: 10px
  right: 10px
  color: #1890ff

.clip-pre, .clip-next
  position: absolute
  top: 50%
  transform: translateY(-50)
  font-size: 40px
  cursor: pointer

.clip-next
  right: 0

.clip-actions
  text-align: center

.clip-info
  text-align: center
  line-height: 1.5

.clip-help
  vertical-align: -1px
  padding-left: 4px

.clip-options
  display: flex
  justify-content: space-around