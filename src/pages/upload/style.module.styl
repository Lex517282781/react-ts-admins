.wrap
  position: relative
  user-select: none

.img-wrap
  width: 10%
  height 0
  position: relative
  padding-bottom: 10%
  overflow: hidden
  border: 1px solid transparent

.img-wrap-block
  background: #f5f5f5
  cursor: pointer

.img-wrap-active
  border-color: red

.img
  width: 100%;
  position: absolute
  top: 50%
  left: 50%
  transform: translate(-50%, -50%)

.pre, .next
  position: absolute
  top: 280px
  font-size: 40px
  cursor: pointer

.next
  right: 24px

.reset
  position: absolute
  z-index: 1
  bottom: 10px
  right: 10px
  color: #1890ff

.actions
  text-align: center
  margin: 32px 0 8px
