{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true
  },
  "globals": {},
  "extends": ["standard"],
  "parserOptions": {
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    },
    "sourceType": "module"
  },
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "react",
    "@typescript-eslint"
  ],
  "rules": {
    "no-new": "off",
    "new-cap": "off",
    "indent": [
      "error",
      2
    ],
    "quotes": [
      "error",
      "single",
      { 
        "allowTemplateLiterals": true
      }
    ],
    "handle-callback-err": 0,
    "semi": [
      "error",
      "never"
    ],
    "no-empty": "error",
    "no-console": "off",
    "no-unused-vars": "off",
    "react/jsx-indent": [
      "error",
      2
    ],
    "import/no-webpack-loader-syntax": 0,
    "no-proto": 0
  }
}
